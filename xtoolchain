set(CMAKE_SYSTEM_NAME Linux)
set(CMAKE_SYSTEM_PROCESSOR arm)

set(tools /home/rafi/pi4/toolchain/arm-rpi4-linux-gnueabihf)
set(tool_prefix arm-rpi4-linux-gnueabihf)
set(CMAKE_EXE_LINKER_FLAGS -L/home/rafi/pi4/lib)
set(CMAKE_CXX_FLAGS -I/home/rafi/pi4/include)
set(CMAKE_C_COMPILER ${tools}/bin/${tool_prefix}-gcc)
set(CMAKE_CXX_COMPILER ${tools}/bin/${tool_prefix}-g++)
